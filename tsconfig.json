{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false, // Отключаем предупреждение о неявном использовании any
    "module": "ESNext",
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": false, // Отключаем строгий режим
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false // Отключаем изолированные модули
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "jsx": "react-jsx"
    }
  },
  "exclude": [
    "node_modules",
    "src/components/ui"
  ],
  "include": ["./config/jest/setupTests.ts", "./src/**/*.ts", "./src/**/*.tsx"]
}
